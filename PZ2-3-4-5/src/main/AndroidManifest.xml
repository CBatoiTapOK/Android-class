<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.fefu.pz2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelloWorld"
        tools:ignore="DiscouragedApi">
        <activity
            android:name=".LoginScreenActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".WelcomeScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityDetailActivity" android:screenOrientation="portrait"/>
        <activity android:name=".NewActivity" android:screenOrientation="portrait"/>
        <activity android:name=".RegistrationScreenActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ActivScreenActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ChangePasswordActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>